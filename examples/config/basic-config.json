{
  "$schema": "https://schemas.awstestingframework.dev/config.json",
  "reporting": {
    "baseDir": "./test-reports",
    "cucumberJsonPath": "./reports/cucumber-report.json",
    "includePerformanceMetrics": true,
    "includeStepDetails": true,
    "maxFeaturesToShow": 50
  },
  "testing": {
    "defaultTimeout": 30000,
    "retryAttempts": 3,
    "retryDelay": 1000,
    "verbose": false
  },
  "aws": {
    "region": "us-east-1",
    "maxRetries": 3,
    "timeout": 10000
  },
  "lambda": {
    "defaultInvocationTimeout": 300000,
    "maxInvocationTimeout": 900000
  }
}
