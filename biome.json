{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noConsoleLog": "warn",
        "noImplicitAnyLet": "error",
        "noDoubleEquals": "error"
      },
      "style": {
        "noNonNullAssertion": "error"
      }
    },
    "ignore": ["dist/**", "coverage/**/*", "docs/**/*", ".stryker-tmp/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "ignore": ["dist/**", "coverage/**/*", "docs/**/*", ".stryker-tmp/**"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    },
    "globals": ["jest", "describe", "it", "beforeEach", "afterEach", "expect"]
  }
}
